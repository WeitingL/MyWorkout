<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp">


    <TextView
        android:id="@+id/tv_workoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平板胸推"
        android:textAppearance="@style/content12_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_setPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三組"
        android:textAppearance="@style/content12_text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_workoutName"
        app:layout_constraintEnd_toStartOf="@+id/tv_workoutTag"
        app:layout_constraintHorizontal_bias="0.30"
        app:layout_constraintStart_toEndOf="@+id/tv_workoutName"
        app:layout_constraintTop_toTopOf="@+id/tv_workoutName" />

    <TextView
        android:id="@+id/tv_workoutTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tag_border"
        android:paddingHorizontal="10dp"
        android:text="胸"
        android:textAppearance="@style/tag_text"
        app:layout_constraintBottom_toBottomOf="@+id/tv_setPlan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_setPlan" />
</androidx.constraintlayout.widget.ConstraintLayout>